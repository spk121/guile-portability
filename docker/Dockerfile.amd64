# Use Debian as the base image
FROM debian:latest

# Install dependencies required to build Guile
RUN apt-get update -qq && \
    apt-get install -y -qq \
      autoconf \
      automake \
      autopoint \
      build-essential \
      flex \
      gettext \
      gperf \
      libtool \
      libffi-dev \
      libgc-dev \
      libgmp-dev \
      libltdl-dev \
      libreadline-dev \
      libunistring-dev \
      make \
      pkg-config \
      texinfo && \
    apt-get clean

# Copy only the guile directory into the container
COPY guile /guile

# Set the working directory to the guile source code
WORKDIR /guile

# Build and install Guile
RUN ./autogen.sh && \
    ./configure --prefix=/usr/local --disable-dependency-tracking && \
    make -j$(nproc) && \
    make check && \
    make install

# Clean up the source directory to reduce image size
RUN rm -rf /guile

# Set the working directory back to root
WORKDIR /


